@model DotNet_EF_CRUD.Models.Dish
<div>
    <form asp-action="Submit" asp-controller="Home" method="post">
        <span asp-validation-for="Name"></span>
        <label asp-for="Name">Your Name</label>
        <input asp-for="Name" type="text" />

        <span asp-validation-for="Chef"></span>
        <label asp-for="Chef">Chef</label>
        <input asp-for="Chef" type="text" />

        <span asp-validation-for="Tastiness"></span>
        <label asp-for="Tastiness">Tastiness:</label>
        <select asp-for="Tastiness">
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
            <option value="5">5</option>
        </select>

        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" rows="10" cols="30"></textarea>
        <button type="submit">Send</button>
    </form>
</div>